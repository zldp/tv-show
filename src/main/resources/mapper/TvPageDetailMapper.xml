    <select id="getPageDeTail" resultType="java.util.Map">
    SELECT
      a.id,
      a.page_id,
      a.panel_id,
      a.data_id,
      REPLACE(REPLACE(a.caption_style,'{name}',b.data_name),'{value}',b.count_value) as caption_style,
      a.value_style,
      a.order_id,
      a.show_level,
      b.data_name,
      b.type,
      b.item_id,
      b.list_field,
      b.list_value,
      b.count_value
    FROM
	  tv_page_detail AS a ,
      tv_datasource AS b
    WHERE
      a.data_id = b.id
    AND
      b.enabled=1
    ORDER BY
      a.order_id
    </select>
</mapper>